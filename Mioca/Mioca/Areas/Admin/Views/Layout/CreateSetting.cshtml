@model SettingViewModel
@{
    ViewData["Title"] = "CreateSetting";
   
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Slider</h4>
                    <form asp-area="admin" asp-controller="layout" asp-action="createSetting" method="post" class="forms-sample" enctype="multipart/form-data">
                        @*<div class="text-danger" asp-validation-summary="All"></div>*@
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="@Model.LogoFile" for="headerformFile" class="form-label">Input Header Logo</label>
                                <input asp-for="@Model.LogoFile" class="form-control" type="file" id="headerformFile">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.LogoFile"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Adress" for="about">Adress</label>
                            <textarea asp-for="@Model.Adress" type="text" class="form-control" id="about" placeholder="Adress"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Adress"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" for="about">Email</label>
                            <input asp-for="@Model.Email" type="text" class="form-control" id="about" placeholder="Email">
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Phone" for="about">Phone</label>
                            <input asp-for="@Model.Phone" type="text" class="form-control" id="about" placeholder="Phone">
                            <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Number" for="about">Number</label>
                            <input asp-for="@Model.Number" type="text" class="form-control" id="about" placeholder="Number">
                            <span class="text-danger" asp-validation-for="@Model.Number"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Create</button>
                        <button asp-area="admin" asp-controller="layout" asp-action="setting" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


