@model IEnumerable<SaleItemViewModel>
@{
    ViewData["Title"] = "SaleItem";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Sold Product Types</h4>
                    <div class="d-flex justify-content-end p-2">
                        <a asp-area="admin" asp-controller="shop" asp-action="sale" class="btn btn-info  btn-fw">Sales</a>
                    </div>
                    <div class="table-responsive">
                        <table id="saleitem" class="table table-striped">
                            <thead>
                                <tr style="text-align:center">
                                    <th>
                                        #
                                    </th>

                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>@i</td>

                                        @if (item.Product != null)
                                        {
                                            <td class="py-1">
                                                <img style="border-radius: 0; width: 100px; height: auto" src="~/Uploads/@item.Product.Photos.First()" alt="image">
                                            </td>
                                        }

                                        <td>
                                            @item.Product.Name
                                        </td>

                                        <td>
                                            @item.Quantity
                                        </td>
                                        <td>
                                            $@item.Price
                                        </td>

                                    </tr>
                                    { i++; }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#saleitem').DataTable();
        });
    </script>
}

