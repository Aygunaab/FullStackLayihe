@model HomeVm
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider</h4>

                        <div id="slider" class="table-responsive">
                            <table class="content table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th class="text-center">
                                            Şəkil

                                        </th>
                                        <th class="text-center">
                                            Ad
                                        </th>
                                        <th>
                                            Qiymət
                                        </th>
                                        <th>
                                            Endirimli qiymət
                                        </th>
                                        <th>
                                            Vəziyyət
                                        </th>


                                        <th>
                                            <a asp-area="admin" asp-controller="home" asp-action="createslider" class="btn btn-outline-success btn-fw">Create</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;}
                                    @foreach (var item in Model.Slider)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            @if (item.Image != null)
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="~/Uploads/@item.Image" alt="image">
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqedueT5B6j_TaQ1ajt0BVgtzqZiwEq26cBw&usqp=CAU" alt="image">
                                                </td>
                                            }

                                            <td>
                                                @(item.Title!= null? item.Title:"")
                                            </td>
                                            <td>
                                                @(item.Price)
                                            </td>
                                            <td>
                                                @(item.DiscountPrice)
                                            </td>
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                                                }
                                            </td>



                                            <td class="text-center d-grid">
                                                <a asp-area="admin" asp-controller="home" asp-action="detail" asp-route-id="@item.Id" class="btn btn-success btn-sm mt-2" title="Detail">Detail</a>

                                                <a asp-area="admin" asp-controller="home" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-2" title="Update">Update</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-2" title="Delete">Delete</a>
                                            </td>
                                        </tr>
                                        { i++; }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana səhifədəki elanlar</h4>

                        <div class="table-responsive">
                            <table id="brand"  class="content table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th class="text-center">
                                            Şəkil

                                        </th>
                                        <th class="text-center">
                                            Ad
                                        </th>

                                        <th>
                                            Vəziyyət
                                        </th>


                                        <th>
                                            <a asp-area="admin" asp-controller="home" asp-action="CreateBanner" class="btn btn-outline-success btn-fw">Create</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int j = 1;}
                                    @foreach (var item in Model.Banner)
                                    {
                                        <tr>
                                            <td>@j</td>
                                            @if (item.Image != null)
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="~/Uploads/@item.Image" alt="image">
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqedueT5B6j_TaQ1ajt0BVgtzqZiwEq26cBw&usqp=CAU" alt="image">
                                                </td>
                                            }

                                            <td>
                                                @(item.Title!= null? item.Title:"")
                                            </td>

                                            <td>
                                                @if (item.Status)
                                                {
                                                    <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                                                }
                                            </td>



                                            <td class="text-center d-grid">
                                                <a asp-area="admin" asp-controller="home" asp-action="bannerdetail" asp-route-id="@item.Id" class="btn btn-success btn-sm mt-2" title="Detail">Detail</a>

                                                <a asp-area="admin" asp-controller="home" asp-action="bannerupdate" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-2" title="Update">Update</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="home" asp-action="BannerDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-2" title="Delete">Delete</a>
                                            </td>
                                        </tr>
                                        { j++; }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#slider').DataTable();
           
        });
        $(document).ready(function () {
            $('#brand').DataTable();

        });
    </script>
}