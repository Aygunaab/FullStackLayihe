@model WhatClientSays
@{
    ViewData["Title"] = "DetailComment";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.FullName</h4>
                        <h4 class="card-title">@Model.companyName</h4>

                        <p>
                            Comment:
                            @Html.Raw(Model.ClientComment)
                        </p>



                        <p>
                            ClientImage:
                            <img style="width: 300px;" src="~/Uploads/@Model.ClientImage" />
                        </p>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

