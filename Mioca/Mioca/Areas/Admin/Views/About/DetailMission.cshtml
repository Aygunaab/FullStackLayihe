@model OurMission
@{
    ViewData["Title"] = "DetailMission";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Title</h4>

                        <p>
                            Desc:
                            @Html.Raw(Model.Desc)
                        </p>
                       


                        <p>
                            MainImage:
                            <img style="width: 300px;" src="~/Uploads/@Model.Image" />
                        </p>
                     

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

