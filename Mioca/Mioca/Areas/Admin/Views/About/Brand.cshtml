@model IEnumerable<BrandVm>
@{
    ViewData["Title"] = "Brand";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Brendlər</h4>

                        <div class="table-responsive">
                            <table id="brand" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th class="text-center">
                                            Şəkil

                                        </th>
                                        <th>
                                            Vəziyyət
                                        </th>


                                        <th>
                                            <a asp-area="admin" asp-controller="about" asp-action="CreateBrand" class="btn btn-outline-success btn-fw">Create</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int b = 1;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@b</td>
                                            @if (item.Icon != null)
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="~/Uploads/@item.Icon" alt="image">
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="py-1">
                                                    <img style="border-radius: 0; width: 100px; height: auto" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqedueT5B6j_TaQ1ajt0BVgtzqZiwEq26cBw&usqp=CAU" alt="image">
                                                </td>
                                            }
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                                                }
                                            </td>



                                            <td class="text-center d-grid">
                                                <a asp-area="admin" asp-controller="about" asp-action="DetailBrand" asp-route-id="@item.Id" class="btn btn-success btn-sm mt-2" title="Detail">Detail</a>

                                                <a asp-area="admin" asp-controller="about" asp-action="UpdateBrand" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-2" title="Update">Update</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="about" asp-action="DeleteBrand" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-2" title="Delete">Delete</a>
                                            </td>
                                        </tr>
                                        { b++; }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#brand').DataTable();
        });
    </script>
}