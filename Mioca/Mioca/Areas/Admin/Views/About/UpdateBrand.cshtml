@model BrandVm
@{
    ViewData["Title"] = "UpdateBrand";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Brendi yenilə</h4>
                        <form class="forms-sample" asp-controller="about" asp-action="UpdateBrand" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Vəziyyəti</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Brand iconu</label>
                                <input asp-for="ImageFile"  value="@Model.Icon" accept="image/*" class="form-control" placeholder="Brand iconu">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>

                            <div class="mt-3 mb-3">
                                <img src="~/Uploads/@Model.Icon" height="100" alt="Alternate Text" />
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-controller="about"asp-action="brand" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
