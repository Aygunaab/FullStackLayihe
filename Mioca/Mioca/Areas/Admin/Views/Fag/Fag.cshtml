@model IEnumerable<FagVm>
@{
    ViewData["Title"] = "Fag";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Məhsullar</h4>

                        <div class="table-responsive">
                            <table id="fag" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        
                                        <th class="text-center">
                                            Sual
                                        </th>
                                        <th>
                                            Aktiv et
                                        </th>

                                        <th style="white-space: nowrap">
                                            Tarix
                                        </th>
                                        <th>
                                            <a asp-area="admin" asp-controller="fag" asp-action="create" class="btn btn-outline-success btn-fw">Create</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                         
                                            <td>
                                                @(item.Question!= null? item.Question:"")
                                            </td>
                                            

                                            <td>
                                                @if (item.Status)
                                                {
                                                    <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                                                }
                                            </td>

                                            <td>
                                                @(item.AddedDate != null? item.AddedDate.ToString("dd.MM.yyyy") : "")
                                            </td>

                                            <td class="text-center d-grid">
                                                <a asp-area="admin" asp-controller="fag" asp-action="detail" asp-route-id="@item.Id" class="btn btn-success btn-sm mt-2" title="Detail">Detail</a>

                                                <a asp-area="admin" asp-controller="fag" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-2" title="Update">Update</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="fag" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-2" title="Delete">Delete</a>
                                            </td>
                                        </tr>
                                        { i++; }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#fag').DataTable();
        });
    </script>
}