@model VmProductPost
@{
    ViewData["Title"] = "Update";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Məhsulu yenilə</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Vəziyyəti</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun adı</label>
                                <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Məhsulun adı">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Qısa mətn</label>
                                <textarea asp-for="Desc" value="@Model.Desc" class="form-control" placeholder="Məhsul haqqında qısa mətn"></textarea>
                                <span asp-validation-for="Desc" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun qiyməti</label>
                                <input asp-for="Price" value="@Model.Price" class="form-control" placeholder="Məhsulun qiyməti" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun sayı</label>
                                <input asp-for="Quantity" value="@Model.Quantity" class="form-control" placeholder="Məhsulun sayı" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun reytinqi</label>
                                <input asp-for="StarCount" value="@Model.StarCount" class="form-control" placeholder="Məhsulun reytinqi" />
                                <span asp-validation-for="StarCount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Mətn</label>
                                <textarea asp-for="SubText" value="@Model.SubText" class="form-control" placeholder="Mətn"></textarea>
                                <span asp-validation-for="SubText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Ən çox satanlar</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="IsBestSeellers">
                                            <input type="radio" class="form-check-input" asp-for="IsBestSeellers" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="IsBestSeellers">
                                            <input type="radio" class="form-check-input" asp-for="IsBestSeellers" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Əsas şəkil</label>
                                <input asp-for="MainImage" value="@Model.MainImage" accept="image/*" class="form-control mb-4" placeholder="Əsas şəkil">
                                <span asp-validation-for="MainImage" class="text-danger"></span>
                            </div>
                            <div class="mt-3 mb-3">
                                <img src="~/Uploads/@Model.Image" height="100" alt="Alternate Text" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Şəkilləri seçin</label>
                                <input asp-for="Images" value="@Model.Images" accept="image/*" class="form-control" placeholder="Məhsul şəkilləri">
                                <span asp-validation-for="Images" class="text-danger"></span>
                            </div>
                            <div class="mt-3 mb-3 d-flex">
                                @foreach (var item in Model.Photos)
                                {

                                    <img class="me-2" src="~/Uploads/@item" height="100" alt="Alternate Text" />

                                }
                            </div>
                        
                            <div class="form-group">
                                <label>Populyar məhsullar</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="IsPopularCategory" value="@Model.IsPopularCategory">
                                            <input type="radio" class="form-check-input" asp-for="IsPopularCategory" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="IsPopularCategory">
                                            <input type="radio" class="form-check-input" asp-for="IsPopularCategory" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun kategoriyası</label>
                                <select class="form-control" asp-for="CategoryId" value="@Model.CategoryId">
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>

                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Label</label>
                                <select class="form-control" asp-for="LabelId">
                                    @foreach (var label in Model.Label)
                                    {
                                        <option value="@label.Id">@label.Text</option>
                                    }
                                </select>

                                <span asp-validation-for="LabelId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
