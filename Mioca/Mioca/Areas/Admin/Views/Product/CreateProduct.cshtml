@model VmProductPost
@{
    ViewData["Title"] = "CreateProduct";
}
@section Css{
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni məhsul yarat</h4>
                        <form asp-controller="product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Vəziyyəti</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="true" id="ExampleRadio2" checked="checked">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun adı</label>
                                <input asp-for="Name" class="form-control" placeholder="Məhsulun adı">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Mətn</label>
                                <textarea asp-for="SubText" class="form-control" placeholder="Məhsul haqqında qısa mətn"></textarea>
                                <span asp-validation-for="SubText" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Qısa mətn</label>
                                <textarea asp-for="Desc" class="form-control" placeholder="Məhsul haqqında ümumi mətn"></textarea>
                                <span asp-validation-for="Desc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun qiyməti</label>
                                <input asp-for="Price" class="form-control" placeholder="Məhsulun qiyməti" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun sayı</label>
                                <input asp-for="Quantity" class="form-control" placeholder="Məhsulun sayı" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun reytinqi</label>
                                <input asp-for="StarCount" class="form-control" placeholder="Məhsulun reytinqi" />
                                <span asp-validation-for="StarCount" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label for="exampleInputUsername1">Əsas şəkil</label>
                                <input asp-for="MainImage" accept="image/*" class="form-control" placeholder="Əsas şəkil">

                                <span asp-validation-for="MainImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Şəkilləri seçin</label>
                                <input asp-for="Images" accept="image/*" class="form-control" placeholder="Məhsul şəkilləri">
                                <span asp-validation-for="Images" class="text-danger"></span>
                            </div>                    

                            <div class="form-group">
                                <label for="exampleInputUsername1">Məhsulun kategoriyası</label>
                                <select class="form-control" asp-for="CategoryId">
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>

                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Label</label>
                                <select class="form-control" asp-for="LabelId">
                                    @foreach (var label in Model.Label)
                                    {
                                        <option value="@label.Id">@label.Text</option>
                                    }
                                </select>

                                <span asp-validation-for="LabelId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Ən çox satanlar</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="IsBestSeellers">
                                            <input type="radio" class="form-check-input" asp-for="IsBestSeellers" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="IsBestSeellers">
                                            <input type="radio" class="form-check-input" asp-for="IsBestSeellers" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Populyar məhsullar</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="IsPopularCategory">
                                            <input type="radio" class="form-check-input" asp-for="IsPopularCategory" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="IsPopularCategory">
                                            <input type="radio" class="form-check-input" asp-for="IsPopularCategory" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Ana sehife banneri</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="IsSingleBanner">
                                            <input type="radio" class="form-check-input" asp-for="IsSingleBanner" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="IsSingleBanner">
                                            <input type="radio" class="form-check-input" asp-for="IsSingleBanner" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-4 mb-2">Əlavə et</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Desc'))
            .catch(error => {
                console.error(error);
            });
        $("#CategoryId").select2({
            placeholder: "Select categories",
            theme: "bootstrap5",
            allowClear: true
        });
    </script>


}