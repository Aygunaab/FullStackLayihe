@model List<VmCategory>
@{
    ViewData["Title"] = "Categoriyalar";

}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categoriyalar</h4>
                        <div class="table-responsive pt-3">
                            <table id="category" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Vəziyyəti
                                        </th>
                                        <th>
                                            İconu
                                        </th>
                                        <th>
                                            Adı
                                        </th>
                                        <th class=" d-flex justify-content-center">
                                            <a asp-action="create" class="btn btn-outline-success btn-fw">Yeni categoriya</a>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {


                                        <tr>
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                                                }
                                            </td>
                                            <td>
                                                <img src="~/Uploads/@item.Logo" alt="">
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td class="d-grid justify-content-center">
                                                <a class="btn btn-outline-primary btn-fw me-2 mt-2" asp-controller="category" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                                                <a class="btn btn-outline-warning btn-fw me-2 mt-2" asp-controller="category" asp-action="update" asp-route-id="@item.Id">Update</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-fw me-2 mt-2" title="Delete">Delete</a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#category').DataTable();
        });
    </script>
}