@model IEnumerable<VmCategory>
@{
    ViewData["Title"] = "Categoriyalar";
   
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categoriyalar</h4>
                        <p class="card-description">
                            <a asp-action="create" class="btn btn-outline-success btn-fw">Yeni categoriya</a>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Vəziyyəti
                                        </th>
                                        <th>
                                          İconu
                                        </th>
                                        <th>
                                            Adı
                                        </th>
                                        <th>
                                         
                                        </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>

                                       @foreach (var item in Model)
                                       {


                                    <tr >
                                        <td>
                                            @if (item.Status)
                                            {
                                                <button type="button" class="btn btn-success btn-rounded btn-fw">Aktiv</button>
                                            }
                else
                {
                                        <button type="button" class="btn btn-warning btn-rounded btn-fw">Passiv</button>
                }
                                        </td>
                                        <td>
                                            <img src="~/assets/images/icons/@item.Logo"
                                                 alt="">
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td class="d-flex justify-content-center">
                                            <a class="btn btn-outline-primary btn-fw me-2"  asp-controller="category" asp-action="detail">Detail</a>
                                            <a class="btn btn-outline-warning btn-fw me-2"  asp-controller="category" asp-action="update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-outline-danger btn-fw"  asp-controller="category" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                        </td>

                                    </tr>
                                       }
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

