
@model VmCategory
@{
    ViewData["Title"] = "Update";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Şöbəni yenilə</h4>
                        <form asp-controller="category" asp-action="update" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Vəziyyəti</label>
                                <div class="d-flex">
                                    <div class="form-check form-check-success me-5">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="true" id="ExampleRadio2" checked="">
                                            Aktiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-warning">
                                        <label class="form-check-label" asp-for="Status">
                                            <input type="radio" class="form-check-input" asp-for="Status" value="false" id="ExampleRadio5" checked="">
                                            Passiv
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <label class="sr-only mb-4" for="inlineFormInputName2">Cateqoriya adı</label>
                            <div>
                                <input asp-for="Name" value="@Model.Name" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Categoriya adın daxil edin">
                                <span asp-validation-for="Name" class="text-danger mb-5"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Əsas şəkil</label>
                                <input asp-for="LogoFile" value="@Model.Logo" accept="image/*" class="form-control" placeholder="Əsas şəkil">
                                <span asp-validation-for="LogoFile" class="text-danger"></span>
                            </div>
                            <div class="mt-3 mb-3">
                                <img src="~/Uploads/@Model.Logo" height="100" alt="Alternate Text" />
                            </div>
                            <button type="submit" class="btn btn-primary mt-4 mb-2">Yenilə</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
