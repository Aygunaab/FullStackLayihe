
@model List<VmUser>
@{
    ViewData["Title"] = "Index";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Ad
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Rol
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i=1;}
                                    @foreach (var user in Model)
                                    {
                                    <tr class="table-success">
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @user.Name
                                        </td>
                                        <td>
                                            @user.Username
                                        </td>
                                        <td>
                                            @user.Roles
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="User" asp-action="GetRoles" asp-route-id="@user.Id">Manage Roles</a>
                                            <a class="btn btn-warning" asp-controller="User" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                                            <a class="btn btn-danger" asp-controller="User" asp-action="ToggleBlockUser" asp-route-id="@user.Id">

                                                @if (user.IsActive)
                                                {
                                                    <span>Block User</span>
                                                }
                                                else
                                                {
                                                    <span>Unblock User</span>
                                                }

                                            </a>


                                        </td>


                                    </tr>
                                        { i++; }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


