@model AddToWishViewModel
@{
    ViewData["Title"] = "Wish";
}

<main>
    <!--Breadcrumb section start-->
    <section class="breadcrumb-section">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h1 class="page-name ">Wishlist</h1>
                    <nav class="d-flex justify-content-center" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">wishlist</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--Breadcrumb section end-->
    <!--Cart section start-->
    <section class="section-style-one">
        <div class="container">
            <div class="row">
                <h3 class="cart-page-title">Your cart items</h3>
                <div class="col-lg-12 col-md-12  col-12">
                    <form action="#">
                        <div class="cart-table-content table-responsive ">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Price</th>
                                        <th>Added Date</th>
                                        <th>Stock Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model.Products)
                                        {
                                    <tr>
                                        <td class="product-img">
                                            <a asp-controller="proddetail" asp-action="index" asp-route-id="@item.ProductId">
                                                <img class="img margin-left-15"
                                                     src="~/assets/images/product-image/@item.Image" alt="@item.Name">
                                            </a>
                                            <span class="product-name td-style"><a href="#">@item.Name</a></span>
                                        </td>
                                        <td class="product-price td-style"><span class="amount">@item.Price.ToString("#.00")</span></td>
                                        <td class="product-name td-style"><a href="#">@item.Date</a></td>
                                        <td class="product-name td-style">
                                            <span>

                                                @if (item.Quantity > 0)
                                                {
                                                <span class="in-stock" style="color: #eaaa85"
>
                                                    <i class="fa fa-check"></i>In Stock
                                                </span>
                                                }
                                                else
                                                {
                                                    <strong>In stock</strong>
                                                }
                                            </span>
                                        </td>
                                        <td class="product-addcart td-style">
                                            <a href="#" data-name="@item.Name" data-id="@item.ProductId" title="Add To Cart" class="addcart add_to-cart">Add To Cart</a>
                                            <a data-typeid="@item.ProductId" class="wish-delete-btn" style="cursor: pointer"><span>x</span></a>
                                        </td>
                                    </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>
    <!--Cart section end-->
</main>

