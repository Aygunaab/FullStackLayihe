@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

@section css{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
}
<main>
    <!--Breadcrumb section start-->
    <section class="breadcrumb-section">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h1 class="page-name ">@Model.Name @Model.Surname</h1>
                    <nav class="d-flex justify-content-center" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Profil</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--Breadcrumb section end-->
    <!--Dashboard section start-->
    <section class="section-style-one dashboard">
        <div class="container">
            <div id="tabs" class="row">
                <div class="col-lg-3 col-md-3 col-sm-12">
                    <ul>
                        <li><a href="#dashboard">Dashboard</a></li>
                        <li><a href="#orders">Orders</a></li>
                        <li><a href="#addresses">Addresses</a></li>
                        <li><a href="#details">Account details</a></li>
                        <li><a href="#logout">Logout</a></li>

                    </ul>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12">
                    <div id="dashboard">
                        <h4>Dashboard </h4>
                        <p>
                            From your account dashboard. you can easily check &amp; view your <a asp-controller="account" asp-action="getorder">
                                recent
                                orders
                            </a>, manage your <a asp-controller="account" asp-action="UpdateProfile">shipping and billing addresses</a> and <a asp-controller="account" asp-action="ChangePassword">Edit your password</a>
                        </p>
                    </div>
                    <div id="orders">
                        <a asp-controller="account" asp-action="getorder" class="primary-button btn" style="background-color:burlywood">Sifarişlər</a>
                    </div>
                    <div id="addresses">
                        <p>The following addresses will be used on the checkout page by default.</p>
                        <h5 class="billing-address">Billing address</h5>
                        <p class="mb-2"><strong>@Model.Adress</strong></p>
                        <address>

                            <br>
                            <span class="mb-1 d-inline-block"><strong>State:</strong>@Model.State</span>,
                            <br>
                            <span class="mb-1 d-inline-block"><strong>ZIP:</strong> @Model.Zipcode</span>,
                            <br>
                            <span><strong>Country:</strong>@Model.Country</span>
                        </address>
                    </div>
                    <div id="details">
                        <a asp-controller="account" asp-action="UpdateProfile" class="primary-button btn" style="background-color:burlywood">Profili məlumatların yenilə</a>
                    </div>
                    <div id="logout">
                        <a asp-controller="account" asp-action="logout" class="primary-button btn" style="background-color:burlywood">Çıxış  et</a>
                    </div>
                </div>

            </div>
            
        </div>
    </section>
    <!--Dashboard section end-->

</main>
@section Scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
}
