@model ResetPasswordVievModel
@{
    ViewData["Title"] = "ResetPassword";
}


<main>
    <!--breadcrumb section start-->
    <section class="breadcrumb-section">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h1 class="page-name ">@ViewData["Title"]</h1>
                    <nav class="d-flex justify-content-center" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--breadcrumb section end-->
    <section class="section-style-one">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 me-auto ms-auto">
                    <div id="login-reg">
                        <div id="login">
                            <div class="login-wrapper">
                                <div class="login-register-form">
                                    <h1>Reset Password</h1>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-controller="account" asp-action="resetpassword" method="post">

                                        <div class="row g-0">
                                            <div class="col-12">
                                                <div class="form-group pb-1">
                                                    <label asp-for="Password" for="password">Password&nbsp;<span class="required">*</span></label>
                                                    <input asp-for="Password" class="form-control" id="password" type="password" required name="password">
                                                    <span asp-validation-for="Password"></span>

                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group pb-1">
                                                    <label asp-for="ConfirmPassword" for="confirmPassword">Confirm Password&nbsp;<span class="required">*</span></label>
                                                    <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" type="password" required name="confirmPassword">
                                                    <span asp-validation-for="ConfirmPassword"></span>
                                                    <input type="hidden" asp-for="Email" />
                                                    <input type="hidden" asp-for="Token" />

                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group pb-3 checkbox d-flex flex-column align-items-start">
                                                    <div>
                                                        <label class="pb-2">
                                                            <input class="" name="showpassword" type="checkbox" id="showpassword" value=""> <span>Show Password</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row g-0">
                                            <div class="col-6 pb-3">
                                                <div class="form-group">
                                                    <button type="submit" class="close animate-button">Continue</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<section class="register">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6">
                <h1>Reset Password</h1>
                <form asp-controller="account" asp-action="resetpassword" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="Password" for="password">Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="Password" class="form-control" id="password" type="password" required name="password">
                                <span asp-validation-for="Password"></span>

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-1">
                                <label asp-for="ConfirmPassword" for="confirmPassword">Confirm Password&nbsp;<span class="required">*</span></label>
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" type="password" required name="confirmPassword">
                                <span asp-validation-for="ConfirmPassword"></span>
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Token" />

                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group pb-3 checkbox d-flex flex-column align-items-start">
                                <div>
                                    <label class="pb-2">
                                        <input class="" name="showpassword" type="checkbox" id="showpassword" value=""> <span>Show Password</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="close animate-button">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

