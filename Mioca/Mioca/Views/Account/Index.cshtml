@model AccountViewModel
@{
    ViewData["Title"] = "Index";
}

<main>
    <!--breadcrumb section start-->
    <section class="breadcrumb-section">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h1 class="page-name ">Login & Register</h1>
                    <nav class="d-flex justify-content-center" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--breadcrumb section end-->
    <section class="section-style-one">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 me-auto ms-auto">
                    <div id="login-reg">
                        <ul>
                            <li class="ui-tabs-active"><a href="#login">Login</a></li>
                            <li><a href="#register">Register</a></li>
                        </ul>
                        <div id="login">
                            <div class="login-wrapper">
                                <div class="login-register-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-action="login" method="post">
                                        <input asp-for="Login.UserName" placeholder="Username">
                                        <span class="text-danger" asp-validation-for="Login.UserName"></span>
                                        <input asp-for="Login.Password" placeholder="Password">
                                        <span class="text-danger" asp-validation-for="Login.Password"></span>
                                        <div class="button-box">
                                            <div class="login-btn">
                                                <input type="checkbox">
                                                <a class="remember-me">Remember me</a>
                                                <a class="forgot" href="#">Forgot Password?</a>
                                            </div>
                                            <button type="submit"><span>Login</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="register">
                            <div class="login-wrapper">
                                <div class="login-register-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-action="register" method="post">
                                        <input asp-for="Register.FullName" placeholder="Fullname">
                                        <span class="text-danger" asp-validation-for="Register.FullName"></span>
                                        <input asp-for="Register.UserName" placeholder="UserName">
                                        <span class="text-danger" asp-validation-for="Register.UserName"></span>

                                        <input asp-for="Register.Email" placeholder="Email">
                                        <span class="text-danger" asp-validation-for="Register.Email"></span>

                                        <input asp-for="Register.Password" placeholder="Password">
                                        <span class="text-danger" asp-validation-for="Register.Password"></span>

                                        <input asp-for="Register.ConfirmPassword" placeholder="ConfirmPassword">
                                        <span class="text-danger" asp-validation-for="Register.ConfirmPassword"></span>


                                        <div class="button-box">
                                            <button type="submit"><span>Register</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

