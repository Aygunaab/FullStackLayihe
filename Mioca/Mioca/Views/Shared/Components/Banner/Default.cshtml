@model IEnumerable<BannerViewModel>

@foreach (var item in Model)
{
    string colwidth = "col-xl-3 col-lg-3";
    string colstyle = "";
    if (item.CardWidth == Repository.Enums.BannerCardWidth.large)
    {
        colwidth = "col-xl-6 col-lg-6";
        colstyle = "mini-single-card";
    }

    <div class="@colwidth col-md-12 col-sm-12 mb-sm-5">
        <div class="banner-mini-card @colstyle">
            <div class="banner-img" style="height:320px;width:100%;">
                <img style="height:100%;" src="assets/images/banner/@item.Image" alt="">
            </div>
            <div class="banner-content">
                <span class="category">@item.Category</span>
                <h6 class="title">
                    @item.Title<br>
                    &amp; @item.SubTitle
                </h6>
                <a href="#" class=" btn primary-button text-uppercase">
                    @item.ActionText
                </a>
            </div>
        </div>
    </div>

}
