@model IEnumerable<BannerViewModel>

@foreach (var item in Model)
{
   
    if (item.CardWidth == Repository.Enums.BannerCardWidth.large)
    {
<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mb-sm-5">
    <div class="banner-mini-card mini-single-card">
        <div class="banner-img" style="height:320px;width:100%;">
            <img style="height:100%;" src="~/Uploads/@item.Image" alt="">
        </div>
        <div class="banner-content">
            <span class="category">@item.Category</span>
            <h6 class="title">
                @item.Title<br>
                &amp; @item.SubTitle
            </h6>
            <a href="#" class=" btn primary-button text-uppercase">
                @item.ActionText
            </a>
        </div>
    </div>
</div>
    }
    else if (item.CardWidth == Repository.Enums.BannerCardWidth.mini)
    {
<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 mb-sm-5">
    <div class="banner-mini-card mini-single-card">
        <div class="banner-img" style="height:320px;width:100%;">
            <img style="height:100%;" src="~/Uploads/@item.Image" alt="">
        </div>
        <div class="banner-content">
            <span class="category">@item.Category</span>
            <h6 class="title">
                @item.Title<br>
                &amp; @item.SubTitle
            </h6>
            <a href="#" class=" btn primary-button text-uppercase">
                @item.ActionText
            </a>
        </div>
    </div>
</div>
    }

    

}
