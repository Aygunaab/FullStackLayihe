@model IEnumerable<SliderViewModel>
<section class="hero arrow"
         style="background-image: url(assets/images/slider-image/slider-bg-1.jpg); padding-top: 100px;padding-bottom: 100px;">
    <div class="hero-slider">

        @foreach (var item in Model)
        {
            <div class="single-slider">
                <div class="container align-self-center">
                    <div class="row">
                        <div class="col-xl-6 col-md-6 col-sm-6 align-self-center">
                            <div class="slider-content">
                                <h2 class="slider-title bg-gif">@Html.Raw(item.Title)<br></h2>

                                <span class="product-price">
                                    <span class="old-price">
                                        <span class="text-decoration-line-through">$@item.DiscountPrice</span>
                                    </span>
                                    <span class="new-price primary-color">- @item.Price</span>
                                </span>

                                @if (!string.IsNullOrEmpty(item.Endpoint))
                                {
                                    <a href="@item.Endpoint" class="btn primary-button m-auto text-uppercase ">@item.ActionText </a>
                                }
                               
                            </div>
                        </div>
                        <div class="col-xl-6  col-md-6 col-sm-6 d-flex justify-content-center position-relative">
                            <div class="image-block">
                                <div class="hero-slide-image">
                                    <img src="~/assets/images/slider-image/@item.Image" alt="slider-img">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>

</section>
